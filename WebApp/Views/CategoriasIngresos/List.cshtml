@{ 
    string Prefix = "CategoriasIngresos";
    string UrlClick = Url.Action("Edit", "CategoriasIngresos");
    string UrlNew = Url.Action("New", "CategoriasIngresos");

    var DataGridConfig = new DataGridConfiguration<CategoriasIngresos>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew))
        .Exports(true,true).SetStorage()
        .ToolbarTop(DApp.DefaultLanguage.GetResource("CategoriasIngresos"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<CategoriasIngresos>(DataGridConfig) 
    .ID("CategoriasIngresosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("CategoriasIngresos").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Codigo); 
    }) 
) 
</div> 
