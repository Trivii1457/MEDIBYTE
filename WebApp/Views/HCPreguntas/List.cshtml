@{ 
    string Prefix = "HCPreguntas"; 
    string UrlClick = Url.Action("Edit", "HCPreguntas"); 
    string UrlNew = Url.Action("New", "HCPreguntas"); 

    var DataGridConfig = new DataGridConfiguration<HCPreguntas>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("HCPreguntas"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<HCPreguntas>(DataGridConfig)
    .ID("HCPreguntasDataGrid")
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("HCPreguntas").LoadAction("Get").Key("Id"))
    .Columns(columns =>
    {
        columns.AddFor(m => m.Descripcion);
    })
) 
</div> 
