@{ 
    string Prefix = "Languages";
    string UrlClick = Url.Action("Edit", "Languages");
    string UrlNew = Url.Action("New", "Languages");

    var DataGridConfig = new DataGridConfiguration<Languages>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        //.New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true)
        .ToolbarTop(DApp.DefaultLanguage.GetResource("Languages"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<Languages>(DataGridConfig) 
    .ID("LanguagesDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("Languages").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Code); 
        columns.AddFor(m => m.Culture); 
        columns.AddFor(m => m.Name); 
        columns.AddFor(m => m.Active); 
    }) 
) 
</div> 
