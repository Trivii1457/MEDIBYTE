@{ 
    string Prefix = "HistoriasClinicasNotasAclaratorias"; 
    string UrlClick = Url.Action("Edit", "HistoriasClinicasNotasAclaratorias"); 
    string UrlNew = Url.Action("New", "HistoriasClinicasNotasAclaratorias"); 

    var DataGridConfig = new DataGridConfiguration<HistoriasClinicasNotasAclaratorias>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("HistoriasClinicasNotasAclaratorias"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<HistoriasClinicasNotasAclaratorias>(DataGridConfig) 
    .ID("HistoriasClinicasNotasAclaratoriasDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("HistoriasClinicasNotasAclaratorias").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.CreationDate).Format(DApp.DefaultLanguage.DateTimeFormat).Caption(DApp.DefaultLanguage.GetResource("HistoriasClinicasNotasAclaratorias.FechaCreacion")); 
        columns.AddFor(m => m.Aclaracion); 
        columns.AddFor(m => m.Profesional.NombreCompleto); 
    }) 
) 
</div> 
