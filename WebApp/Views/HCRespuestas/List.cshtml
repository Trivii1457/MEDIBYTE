@{ 
    string Prefix = "HCRespuestas"; 
    string UrlClick = Url.Action("Edit", "HCRespuestas"); 
    string UrlNew = Url.Action("New", "HCRespuestas"); 

    var DataGridConfig = new DataGridConfiguration<HCRespuestas>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("HCRespuestas"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<HCRespuestas>(DataGridConfig) 
    .ID("HCRespuestasDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("HCRespuestas").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.TipoControlId); 
        columns.AddFor(m => m.Texto); 
        columns.AddFor(m => m.HCPregunta.Id); 
    }) 
) 
</div> 
