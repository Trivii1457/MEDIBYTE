@{ 
    string Prefix = "CategoriasServicios";
    string UrlClick = Url.Action("Edit", "CategoriasServicios");
    string UrlNew = Url.Action("New", "CategoriasServicios");

    var DataGridConfig = new DataGridConfiguration<CategoriasServicios>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew))
        .Exports(true,true).SetStorage()
        .ToolbarTop(DApp.DefaultLanguage.GetResource("CategoriasServicios"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<CategoriasServicios>(DataGridConfig) 
    .ID("CategoriasServiciosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("CategoriasServicios").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Nombre); 
    }) 
) 
</div> 
