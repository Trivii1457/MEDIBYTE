@{ 
    string Prefix = "Parentescos"; 
    string UrlClick = Url.Action("Edit", "Parentescos"); 
    string UrlNew = Url.Action("New", "Parentescos"); 

    var DataGridConfig = new DataGridConfiguration<Parentescos>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("Parentescos"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<Parentescos>(DataGridConfig) 
    .ID("ParentescosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("Parentescos").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Descripcion); 
    }) 
) 
</div> 
