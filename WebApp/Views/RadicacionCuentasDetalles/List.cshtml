@{ 
    string Prefix = "RadicacionCuentasDetalles"; 
    string UrlClick = Url.Action("Edit", "RadicacionCuentasDetalles"); 
    string UrlNew = Url.Action("New", "RadicacionCuentasDetalles"); 

    var DataGridConfig = new DataGridConfiguration<RadicacionCuentasDetalles>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("RadicacionCuentasDetalles"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<RadicacionCuentasDetalles>(DataGridConfig) 
    .ID("RadicacionCuentasDetallesDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("RadicacionCuentasDetalles").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.RadicacionCuentas.Id); 
        columns.AddFor(m => m.Facuras.Id); 
    }) 
) 
</div> 
