@{ 
    string Prefix = "AdmisionesServiciosPrestados";
    string UrlClick = Url.Action("Edit", "AdmisionesServiciosPrestados");
    string UrlNew = Url.Action("New", "AdmisionesServiciosPrestados");

    var DataGridConfig = new DataGridConfiguration<AdmisionesServiciosPrestados>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew))
        .Exports(true,true).SetStorage()
        .ToolbarTop(DApp.DefaultLanguage.GetResource("AdmisionesServiciosPrestados"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<AdmisionesServiciosPrestados>(DataGridConfig) 
    .ID("AdmisionesServiciosPrestadosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("AdmisionesServiciosPrestados").LoadAction("GetAdmisionesServiciosPrestadosParaArchivos").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Admisiones.Pacientes.NumeroIdentificacion).Caption(DApp.DefaultLanguage.GetResource("AdmisionesServiciosPrestados.NumeroIdentificacion")); 
        columns.AddFor(m => m.Admisiones.Pacientes.NombreCompleto).Caption(DApp.DefaultLanguage.GetResource("AdmisionesServiciosPrestados.Paciente")); 
        columns.AddFor(m => m.Servicios.Nombre).Caption(DApp.DefaultLanguage.GetResource("AdmisionesServiciosPrestados.Servicio"));
        columns.AddFor(m => m.Atenciones.FechaAtencion).Caption(DApp.DefaultLanguage.GetResource("AdmisionesServiciosPrestados.Fecha"));
    }) 
) 
</div> 
