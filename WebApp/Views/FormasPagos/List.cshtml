@{ 
    string Prefix = "FormasPagos"; 
    string UrlClick = Url.Action("Edit", "FormasPagos"); 
    string UrlNew = Url.Action("New", "FormasPagos"); 

    var DataGridConfig = new DataGridConfiguration<FormasPagos>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("FormasPagos"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<FormasPagos>(DataGridConfig) 
    .ID("FormasPagosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("FormasPagos").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Codigo); 
        columns.AddFor(m => m.Nombre); 
    }) 
) 
</div> 
