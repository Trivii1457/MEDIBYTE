@{ 
    string Prefix = "Convenios";
    string UrlClick = Url.Action("Edit", "Convenios");
    string UrlNew = Url.Action("New", "Convenios");

    var DataGridConfig = new DataGridConfiguration<Convenios>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew))
        .Exports(true,true).SetStorage()
        .ToolbarTop(DApp.DefaultLanguage.GetResource("Convenios"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<Convenios>(DataGridConfig)
    .ID("ConveniosDataGrid")
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("Convenios").LoadAction("Get").Key("Id"))
    .Columns(columns =>
    {

        columns.AddFor(m => m.Codigo);
        columns.AddFor(m => m.Entidades.Nombre);
        columns.AddFor(m => m.Nombre);
        columns.AddFor(m => m.Estados.Nombre);
        columns.AddFor(m => m.FechaInicio);
        columns.AddFor(m => m.FechaCaducidad);

    })
) 
</div> 
