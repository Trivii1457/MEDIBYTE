@{ 
    string Prefix = "TiposServicios"; 
    string UrlClick = Url.Action("Edit", "TiposServicios"); 
    string UrlNew = Url.Action("New", "TiposServicios"); 

    var DataGridConfig = new DataGridConfiguration<TiposServicios>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("TiposServicios"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<TiposServicios>(DataGridConfig) 
    .ID("TiposServiciosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("TiposServicios").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Nombre); 
    }) 
) 
</div> 
