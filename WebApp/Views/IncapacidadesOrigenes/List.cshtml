@{ 
    string Prefix = "IncapacidadesOrigenes";
    string UrlClick = Url.Action("Edit", "IncapacidadesOrigenes");
    string UrlNew = Url.Action("New", "IncapacidadesOrigenes");

    var DataGridConfig = new DataGridConfiguration<IncapacidadesOrigenes>(Prefix)
        .OnClick(UrlClick, new { Id = "Id" })
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew))
        .Exports(true,true).SetStorage()
        .ToolbarTop(DApp.DefaultLanguage.GetResource("IncapacidadesOrigenes"), "mainPanel");
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<IncapacidadesOrigenes>(DataGridConfig) 
    .ID("IncapacidadesOrigenesDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("IncapacidadesOrigenes").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Descripcion); 
    }) 
) 
</div> 
