@{ 
    string Prefix = "HistoriasClinicasRespuestas"; 
    string UrlClick = Url.Action("Edit", "HistoriasClinicasRespuestas"); 
    string UrlNew = Url.Action("New", "HistoriasClinicasRespuestas"); 

    var DataGridConfig = new DataGridConfiguration<HistoriasClinicasRespuestas>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("HistoriasClinicasRespuestas"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<HistoriasClinicasRespuestas>(DataGridConfig) 
    .ID("HistoriasClinicasRespuestasDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("HistoriasClinicasRespuestas").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.HIstoriasClinicas.Id); 
        columns.AddFor(m => m.HCRespuestas.Id); 
        columns.AddFor(m => m.RespuestaAbierta); 
        columns.AddFor(m => m.RespuestaSeleccion); 
    }) 
) 
</div> 
