@{ 
    string Prefix = "Generos"; 
    string UrlClick = Url.Action("Edit", "Generos"); 
    string UrlNew = Url.Action("New", "Generos"); 

    var DataGridConfig = new DataGridConfiguration<Generos>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("Generos"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<Generos>(DataGridConfig) 
    .ID("GenerosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("Generos").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Codigo); 
        columns.AddFor(m => m.Nombre);        
    }) 
) 
</div> 
