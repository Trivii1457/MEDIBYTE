@{ 
    string Prefix = "TiposIdentificacion"; 
    string UrlClick = Url.Action("Edit", "TiposIdentificacion"); 
    string UrlNew = Url.Action("New", "TiposIdentificacion"); 

    var DataGridConfig = new DataGridConfiguration<TiposIdentificacion>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("TiposIdentificacion"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<TiposIdentificacion>(DataGridConfig) 
    .ID("TiposIdentificacionDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("TiposIdentificacion").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Codigo); 
        columns.AddFor(m => m.Nombre);         
    }) 
) 
</div> 
