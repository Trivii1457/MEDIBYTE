@{ 
    string Prefix = "ProgramacionDisponible"; 
    string UrlClick = Url.Action("Edit", "ProgramacionDisponible"); 
    string UrlNew = Url.Action("New", "ProgramacionDisponible"); 

    var DataGridConfig = new DataGridConfiguration<ProgramacionDisponible>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("ProgramacionDisponible"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<ProgramacionDisponible>(DataGridConfig) 
    .ID("ProgramacionDisponibleDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("ProgramacionDisponible").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Servicios.Id); 
        columns.AddFor(m => m.Empleados.Id); 
        columns.AddFor(m => m.ProgramacionAgenda.Id); 
    }) 
) 
</div> 
