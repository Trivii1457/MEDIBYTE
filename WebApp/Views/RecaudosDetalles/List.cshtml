@{ 
    string Prefix = "RecaudosDetalles"; 
    string UrlClick = Url.Action("Edit", "RecaudosDetalles"); 
    string UrlNew = Url.Action("New", "RecaudosDetalles"); 

    var DataGridConfig = new DataGridConfiguration<RecaudosDetalles>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("RecaudosDetalles"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<RecaudosDetalles>(DataGridConfig)
    .ID("RecaudosDetallesDataGrid")
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("RecaudosDetalles").LoadAction("Get").Key("Id"))
    .Columns(columns =>
    {
        //columns.AddFor(m => m.Recaudos.Id); 

        columns.AddFor(m => m.Facturas.Id);
        columns.AddFor(m => m.ValorAplicado);
        columns.AddFor(m => m.ValorRetencion);
    })
) 
</div> 
