@{ 
    string Prefix = "ServiciosEmpleados"; 
    string UrlClick = Url.Action("Edit", "ServiciosEmpleados"); 
    string UrlNew = Url.Action("New", "ServiciosEmpleados"); 

    var DataGridConfig = new DataGridConfiguration<ServiciosEmpleados>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("ServiciosEmpleados"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<ServiciosEmpleados>(DataGridConfig) 
    .ID("ServiciosEmpleadosDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("ServiciosEmpleados").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Servicios.Id); 
        columns.AddFor(m => m.Empleados.Id); 
    }) 
) 
</div> 
