@{ 
    string Prefix = "RangoEdad"; 
    string UrlClick = Url.Action("Edit", "RangoEdad"); 
    string UrlNew = Url.Action("New", "RangoEdad"); 

    var DataGridConfig = new DataGridConfiguration<RangoEdad>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("RangoEdad"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<RangoEdad>(DataGridConfig) 
    .ID("RangoEdadDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("RangoEdad").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Nombre); 
    }) 
) 
</div> 
