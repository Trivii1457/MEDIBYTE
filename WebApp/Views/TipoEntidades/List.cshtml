@{ 
    string Prefix = "TipoEntidades"; 
    string UrlClick = Url.Action("Edit", "TipoEntidades"); 
    string UrlNew = Url.Action("New", "TipoEntidades"); 

    var DataGridConfig = new DataGridConfiguration<TipoEntidades>(Prefix) 
        .OnClick(UrlClick, new { Id = "Id" }) 
        .New(UrlNew,DApp.ActionViewSecurity(Context,UrlNew)) 
        .Exports(true,true) 
        .ToolbarTop(DApp.DefaultLanguage.GetResource("TipoEntidades"), "mainPanel"); 
} 

<div class="box-body table-responsive no-padding"> 
@(Html.DControls().DataGridSimple<TipoEntidades>(DataGridConfig) 
    .ID("TipoEntidadesDataGrid") 
    .DataSource(d => d.Mvc().LoadMethod("POST").Controller("TipoEntidades").LoadAction("Get").Key("Id")) 
    .Columns(columns => 
    { 
        columns.AddFor(m => m.Codigo); 
        columns.AddFor(m => m.Nombre); 
    }) 
) 
</div> 
